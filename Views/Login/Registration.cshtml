@using CarCareTracker.Helper
@inject IConfigHelper config
@inject ITranslationHelper translator
@{
    var userLanguage = config.GetServerLanguage();
    var openRegistrationEnabled = config.GetServerOpenRegistration();
}
@model LoginModel
@{
    ViewData["Title"] = "Register";
}
@section Scripts {
    <script src="~/js/login.js?v=@StaticHelper.VersionNumber"></script>
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .login-wrapper {
        min-height: 100vh;
        display: flex;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        overflow: hidden;
    }

    /* Section gauche - Design visuel */
    .login-visual {
        flex: 1;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
        background-size: 400% 400%;
        animation: gradientShift 15s ease infinite;
        position: relative;
        display: none;
        align-items: center;
        justify-content: center;
        padding: 40px;
        overflow: hidden;
    }

    @@keyframes gradientShift {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }

    .login-visual::before {
        content: '';
        position: absolute;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(255,255,255,0.1) 2px, transparent 2px);
        background-size: 60px 60px;
        animation: floatPattern 30s linear infinite;
        opacity: 0.6;
    }

    @@keyframes floatPattern {
        0% { transform: translate(0, 0) rotate(0deg); }
        100% { transform: translate(60px, 60px) rotate(360deg); }
    }

    .login-visual-content {
        position: relative;
        z-index: 1;
        text-align: center;
        color: white;
        max-width: 500px;
    }

    .login-visual-logo {
        max-width: 280px;
        height: auto;
        margin-bottom: 30px;
        filter: drop-shadow(0 10px 30px rgba(0,0,0,0.3));
        animation: logoFloat 3s ease-in-out infinite;
    }

    @@keyframes logoFloat {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-10px); }
    }

    .login-visual-title {
        font-size: 42px;
        font-weight: 700;
        margin-bottom: 15px;
        text-shadow: 0 2px 20px rgba(0,0,0,0.2);
    }

    .login-visual-subtitle {
        font-size: 18px;
        opacity: 0.95;
        line-height: 1.6;
    }

    /* Section droite - Formulaire */
    .login-form-section {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px;
        background: #f8f9fa;
        position: relative;
    }

    .login-form-container {
        width: 100%;
        max-width: 440px;
        animation: slideInRight 0.6s ease-out;
    }

    @@keyframes slideInRight {
        from {
            opacity: 0;
            transform: translateX(30px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    .login-form-header {
        text-align: center;
        margin-bottom: 40px;
    }

    .login-form-logo {
        max-width: 200px;
        height: auto;
        margin-bottom: 20px;
        display: none;
    }

    .login-form-title {
        font-size: 32px;
        font-weight: 700;
        color: #1a1a1a;
        margin-bottom: 8px;
        letter-spacing: -0.5px;
    }

    .login-form-subtitle {
        font-size: 15px;
        color: #6b7280;
        font-weight: 400;
    }

    .login-form {
        background: white;
        padding: 40px;
        border-radius: 16px;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        border: 1px solid #e5e7eb;
    }

    .form-field {
        margin-bottom: 24px;
    }

    .form-label {
        display: block;
        font-size: 14px;
        font-weight: 600;
        color: #374151;
        margin-bottom: 8px;
    }

    .form-input-wrapper {
        position: relative;
    }

    .form-input {
        width: 100%;
        padding: 14px 16px;
        font-size: 15px;
        border: 2px solid #e5e7eb;
        border-radius: 10px;
        background: #fff;
        transition: all 0.2s ease;
        color: #1a1a1a;
    }

    .form-input:focus {
        outline: none;
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    .form-input::placeholder {
        color: #9ca3af;
    }

    .input-group-custom {
        display: flex;
        gap: 8px;
    }

    .input-group-custom .form-input {
        flex: 1;
    }

    .btn-send-token {
        padding: 14px 20px;
        background: #f3f4f6;
        color: #374151;
        border: 2px solid #e5e7eb;
        border-radius: 10px;
        font-size: 15px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
        white-space: nowrap;
    }

    .btn-send-token:hover {
        background: #e5e7eb;
        border-color: #d1d5db;
    }

    .password-toggle-btn {
        position: absolute;
        right: 12px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: #6b7280;
        cursor: pointer;
        padding: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: color 0.2s ease;
        z-index: 10;
    }

    .password-toggle-btn:hover {
        color: #667eea;
    }

    .btn-primary {
        width: 100%;
        padding: 14px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        border-radius: 10px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 14px 0 rgba(102, 126, 234, 0.39);
        margin-bottom: 16px;
        margin-top: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px 0 rgba(102, 126, 234, 0.5);
    }

    .btn-primary:active {
        transform: translateY(0);
    }

    .btn-primary:disabled {
        opacity: 0.6;
        cursor: not-allowed;
        transform: none;
    }

    .login-links {
        text-align: center;
        margin-top: 24px;
    }

    .login-link {
        color: #667eea;
        text-decoration: none;
        font-size: 14px;
        font-weight: 500;
        transition: color 0.2s ease;
    }

    .login-link:hover {
        color: #764ba2;
        text-decoration: underline;
    }

    .info-box {
        background: #f3f4f6;
        border-left: 4px solid #667eea;
        padding: 16px;
        border-radius: 8px;
        margin-bottom: 24px;
        font-size: 14px;
        color: #6b7280;
        line-height: 1.6;
    }

    /* Responsive Design */
    @@media (min-width: 1024px) {
        .login-visual {
            display: flex;
        }
        
        .login-form-logo {
            display: none;
        }
    }

    @@media (max-width: 1023px) {
        .login-wrapper {
            flex-direction: column;
        }

        .login-visual {
            display: none;
        }

        .login-form-section {
            padding: 30px 20px;
        }

        .login-form {
            padding: 30px 24px;
        }

        .login-form-logo {
            display: block;
        }

        .login-form-title {
            font-size: 28px;
        }
    }

    @@media (max-width: 480px) {
        .login-form-section {
            padding: 20px 16px;
        }

        .login-form {
            padding: 24px 20px;
        }

        .login-form-title {
            font-size: 24px;
        }

        .login-visual-title {
            font-size: 32px;
        }

        .input-group-custom {
            flex-direction: column;
        }
    }
</style>

<div class="login-wrapper">
    <!-- Section visuelle (desktop seulement) -->
    <div class="login-visual">
        <div class="login-visual-content">
            <img src="@config.GetLogoUrl()?v=@StaticHelper.VersionNumber" class="login-visual-logo" alt="GestionFlotte" />
            <h1 class="login-visual-title">Créer un compte</h1>
            <p class="login-visual-subtitle">
                Rejoignez GestionFlotte et commencez à gérer votre flotte de véhicules dès aujourd'hui. 
                C'est simple, rapide et gratuit.
            </p>
        </div>
    </div>

    <!-- Section formulaire -->
    <div class="login-form-section">
        <div class="login-form-container">
            <div class="login-form-header">
                <img src="@config.GetLogoUrl()?v=@StaticHelper.VersionNumber" class="login-form-logo" alt="GestionFlotte" />
                <h1 class="login-form-title">Inscription</h1>
                <p class="login-form-subtitle">Créez votre compte GestionFlotte</p>
            </div>

            <div class="login-form">
                @if (!openRegistrationEnabled)
                {
                    <div class="info-box">
                        <i class="bi bi-info-circle me-2"></i>
                        @translator.Translate(userLanguage, "You need a registration token to create an account. Please contact your administrator.")
                    </div>
                }

                <form onsubmit="event.preventDefault(); performRegistration();">
                    <div class="form-field">
                        <label for="inputToken" class="form-label">
                            @translator.Translate(userLanguage, "Token")
                        </label>
                        <div class="form-input-wrapper">
                            @if (openRegistrationEnabled)
                            {
                                <div class="input-group-custom">
                                    <input 
                                        type="text" 
                                        id="inputToken" 
                                        class="form-input" 
                                        value="@Model.Token"
                                        placeholder="@translator.Translate(userLanguage, "Registration token")"
                                    />
                                    <button 
                                        type="button" 
                                        class="btn-send-token" 
                                        onclick="sendRegistrationToken()"
                                        title="@translator.Translate(userLanguage, "Request Token")"
                                    >
                                        <i class="bi bi-send"></i>
                                    </button>
                                </div>
                            }
                            else
                            {
                                <input 
                                    type="text" 
                                    id="inputToken" 
                                    class="form-input" 
                                    value="@Model.Token"
                                    placeholder="@translator.Translate(userLanguage, "Registration token")"
                                    required
                                />
                            }
                        </div>
                    </div>

                    <div class="form-field">
                        <label for="inputEmail" class="form-label">
                            @translator.Translate(userLanguage, "Email Address")
                        </label>
                        <div class="form-input-wrapper">
                            <input 
                                type="email" 
                                id="inputEmail" 
                                class="form-input" 
                                value="@Model.EmailAddress"
                                placeholder="@translator.Translate(userLanguage, "Enter your email")"
                                autocomplete="email"
                                required
                            />
                        </div>
                    </div>

                    <div class="form-field">
                        <label for="inputUserName" class="form-label">
                            @translator.Translate(userLanguage, "Username")
                        </label>
                        <div class="form-input-wrapper">
                            <input 
                                type="text" 
                                id="inputUserName" 
                                class="form-input" 
                                placeholder="@translator.Translate(userLanguage, "Choose a username")"
                                autocomplete="username"
                                required
                            />
                        </div>
                    </div>

                    <div class="form-field">
                        <label for="inputUserPassword" class="form-label">
                            @translator.Translate(userLanguage, "Password")
                        </label>
                        <div class="form-input-wrapper">
                            <input 
                                type="password" 
                                id="inputUserPassword" 
                                class="form-input" 
                                placeholder="@translator.Translate(userLanguage, "Choose a password")"
                                onkeyup="callBackOnEnter(event, performRegistration)"
                                autocomplete="new-password"
                                required
                            />
                            <button 
                                type="button" 
                                class="password-toggle-btn" 
                                onclick="togglePasswordVisibilityRegistration(this)"
                                aria-label="Toggle password visibility"
                            >
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                    </div>

                    <button type="submit" class="btn-primary">
                        <i class="bi bi-person-plus"></i>
                        <span>@translator.Translate(userLanguage, "Register")</span>
                    </button>
                </form>

                <div class="login-links">
                    <a href="/Login/Index" class="login-link">
                        <i class="bi bi-arrow-left me-2"></i>@translator.Translate(userLanguage, "Back to Login")
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Fonction personnalisée pour la page d'inscription
    function togglePasswordVisibilityRegistration(button) {
        const passwordInput = document.getElementById('inputUserPassword');
        const icon = button.querySelector('i');
        
        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
            icon.classList.remove('bi-eye');
            icon.classList.add('bi-eye-slash');
        } else {
            passwordInput.type = 'password';
            icon.classList.remove('bi-eye-slash');
            icon.classList.add('bi-eye');
        }
    }
</script>